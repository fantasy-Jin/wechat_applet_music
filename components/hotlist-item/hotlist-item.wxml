<!--components/hotlist-item/hotlist-item.wxml-->
<wxs src="/utils/format.wxs" module="fmt"></wxs>
<view class="hotItem" bindtap="onMenuItem">
  <view class="top">
    <image class="image" mode="widthFix" src="{{itemData.coverImgUrl}}"></image>
    <view class="count">{{ fmt.fmtCount(itemData.playCount)}}</view>
  </view>
  <view class="bottom">
    {{itemData.name}}
  </view>
</view>