/* components/menu-header/menu-header.wxss */

.header {
  position: relative;
  height: 450rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.bg-img {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}

.infos {
  display: flex;
  justify-content: center;
  align-items: center;
}
.infos .cover {
  width: 220rpx;
  height: 220rpx;
  border-radius: 18rpx;
}
.infos .txt {
  width: 60%;
  height: 220rpx;
  margin-left: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.infos .txt .creator {
  margin-top: 20rpx;
}
.infos .txt .creator .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.infos .txt .creator .nickname {
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 18rpx;
}
.infos .txt .brief {
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tool {
  /* margin-top: 40rpx; */
  display: flex;
  justify-content: space-around;

  align-items: center;
}
.tool .left .favor-icon,
.tool .right .share-icon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
  margin-right: 8rpx;
}
